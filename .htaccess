# Enable mod_rewrite
RewriteEngine On

# If the requested file or directory does not exist
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Route all requests to passenger_wsgi.py
RewriteRule ^(.*)$ passenger_wsgi.py/$1 [QSA,L]

# Deny access to Python files except passenger_wsgi.py
<Files *.py>
    Order Deny,Allow
    Deny from all
</Files>

<Files passenger_wsgi.py>
    Order Allow,Deny
    Allow from all
</Files>

# Deny access to sensitive files
<FilesMatch "^(\.env|\.gitignore|requirements\.txt)$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Disable directory listing
Options -Indexes

# Set default character set
AddDefaultCharset UTF-8

# Enable WSGI
AddHandler wsgi-script .py
DirectoryIndex disabled
DirectoryIndex passenger_wsgi.py

# Enable Passenger
PassengerEnabled On

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

PassengerPython /home/username/virtualenv/your_app_directory/3.9/bin/python

<IfModule mod_rewrite.c>
    RewriteCond %{HTTPS} off
    RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
</IfModule>

<Files ~ "^\.">
    Order allow,deny
    Deny from all
</Files> 
# Environment Configuration
# ==================
# Copy this file to either:
# - .env.local for local development
# - .env for production

# Flask Configuration
# ==================
# Environment: development or production
FLASK_ENV=development  # Use 'production' on server

# Secret key for session management (generate a secure random key in production)
SECRET_KEY=your-secret-key-here

# Database Configuration
# ==================
# For local development:
MYSQL_DATABASE=crypto_portfolio
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_HOST=localhost

# For production (Namecheap):
# DATABASE_URL will be set in cPanel Python App configuration
# Format: mysql://username:password@localhost/database_name

# Application Settings
# ==================
# Website URL (no trailing slash)
SITE_URL=http://localhost:5000  # Use https://your-domain.com in production

# Company or application name
COMPANY_NAME=Investment Tracker

# Debug Settings
# ==================
# Enable for local development, disable in production
DEBUG=True  # Set to False in production
FLASK_DEBUG=1  # Set to 0 in production

# API Keys
# ==================
# CoinGecko API key (if using pro version)
# COINGECKO_API_KEY=your-api-key-here 